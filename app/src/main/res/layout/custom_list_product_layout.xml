<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0000000000"
        android:id="@+id/custom_list_product_barcode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1000"
        android:id="@+id/custom_list_product_price"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/custom_list_product_promotion"
        android:layout_toStartOf="@+id/custom_list_product_promotion"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descripcion de Producto"
        android:id="@+id/custom_list_product_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/custom_list_product_price"
        android:typeface="serif"
        android:textColor="#0a7a2a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/custom_list_product_dollar_textview"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/custom_list_product_price"
        android:layout_toStartOf="@+id/custom_list_product_price"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Oferta"
        android:id="@+id/custom_list_product_promotion"
        android:layout_alignBottom="@+id/custom_list_product_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ef0a0a"
        android:textStyle="bold|italic" />

</RelativeLayout>