<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/row_text_1"
        android:layout_weight="0.35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        android:typeface="monospace"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>
    <TextView
        android:id="@+id/row_text_2"
        android:layout_weight="0.35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        android:textColor="#ac0707"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignBottom="@+id/row_text_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">
    </TextView>
    <TextView
        android:id="@+id/row_text_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="40dp"
        android:text="Descripcion"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#00a50b"
        android:layout_below="@+id/row_text_1"
        android:layout_alignRight="@+id/row_text_2"
        android:layout_alignEnd="@+id/row_text_2">
    </TextView>
</RelativeLayout>