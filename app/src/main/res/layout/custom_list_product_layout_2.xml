<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0000000"
        android:id="@+id/custom_list_product_barcode"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/custom_list_product_dollar_textview"
        android:layout_toStartOf="@+id/custom_list_product_dollar_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1000"
        android:id="@+id/custom_list_product_price_left"
        android:textSize="26dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/custom_list_product_description"
        android:layout_toRightOf="@+id/custom_list_product_dollar_textview"
        android:layout_toEndOf="@+id/custom_list_product_dollar_textview" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descripcion de Producto"
        android:id="@+id/custom_list_product_description"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#0a7a2a"
        android:layout_below="@+id/custom_list_product_barcode"
        android:layout_toEndOf="@+id/custom_list_product_imageView"
        android:layout_toRightOf="@+id/custom_list_product_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/custom_list_product_dollar_textview"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/custom_list_product_description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1000"
        android:id="@+id/custom_list_product_price_right"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignTop="@+id/custom_list_product_price_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="26dp"
        android:layout_alignBottom="@+id/custom_list_product_price_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_list_product_imageView"
        android:maxHeight="50px"
        android:maxWidth="50px"
        android:minHeight="30px"
        android:minWidth="30px"
        android:src="@drawable/abc_btn_switch_to_on_mtrl_00001"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/custom_list_product_barcode"
        android:layout_toStartOf="@+id/custom_list_product_barcode"
        android:layout_alignBottom="@+id/custom_list_product_price_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/custom_list_product_dollar_textview2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/custom_list_product_description"
        android:layout_toLeftOf="@+id/custom_list_product_price_right"
        android:layout_toStartOf="@+id/custom_list_product_price_right" />

</RelativeLayout>